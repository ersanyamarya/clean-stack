{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "module": "nodenext",
    "paths": {
      "@clean-stack/components/*": ["frontend-libs/components/src/ui/*"],
      "@clean-stack/connectors/mongodb-connector": ["connectors/database/mongodb-connector/src/index.ts"],
      "@clean-stack/connectors/redis": ["connectors/database/redis/src/index.ts"],
      "@clean-stack/custom-errors": ["domain/custom-errors/src/index.ts"],
      "@clean-stack/domain_pedestrian_data": ["domain/domain_pedestrian_data/src/index.ts"],
      "@clean-stack/domain_user": ["domain/domain_user/src/index.ts"],
      "@clean-stack/fe-utils": ["frontend-libs/fe-utils/src/index.ts"],
      "@clean-stack/framework/global-types": ["framework/global-types/src/index.ts"],
      "@clean-stack/framework/grpc-essentials": ["framework/grpc-essentials/src/index.ts"],
      "@clean-stack/framework/koa-server-essentials": ["framework/koa-server-essentials/src/index.ts"],
      "@clean-stack/framework/utilities": ["framework/utilities/src/index.ts"],
      "@clean-stack/frontend-telemetry": ["frontend-libs/frontend-telemetry/src/index.ts"],
      "@clean-stack/grpc-proto/*": ["domain/grpc-proto/src/generated/*"],
      "@clean-stack/http-server": ["framework/http-server/src/index.ts"],
      "@clean-stack/platform-features/backend-telemetry": ["platform-features/backend-telemetry/src/index.ts"],
      "@clean-stack/platform-features/cache": ["platform-features/cache/src/index.ts"],
      "@clean-stack/platform-features/event-queue": ["platform-features/event-queue/src/index.ts"],
      "@clean-stack/platform-features/rate-limiter": ["platform-features/rate-limiter/src/index.ts"],
      "@clean-stack/react-hooks/*": ["frontend-libs/components/src/hooks/*"],
      "@clean-stack/styles/*": ["frontend-libs/components/src/styles/*"],
      "@clean-stack/trpc-router": ["services/main-service/src/trpc_router.ts"],
      "@clean-stack/utils": ["frontend-libs/utils/src/index.ts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
