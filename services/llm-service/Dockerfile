# Run the container with `docker run -p 3000:3000 -t llm-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system llm-service && \
          adduser --system -G llm-service llm-service

COPY dist/services/llm-service llm-service/
RUN chown -R llm-service:llm-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix llm-service --omit=dev -f install

CMD [ "node", "llm-service" ]
